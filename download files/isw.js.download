function buzz(title, content,color)
{
	    $.confirm({
        title: title,
        content: content,
        type: color,
        typeAnimated: true,
        buttons: {
            tryAgain: {
                text: 'Ok',
                btnClass: 'btn-'+color,
                action: function(){
                }
            }
        }
    });
}

